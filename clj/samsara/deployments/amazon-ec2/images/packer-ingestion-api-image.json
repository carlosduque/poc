{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region": "eu-west-1",
        "source_ami": "-base-ami-",
        "build_id": "",
        "security_group_id": "",
        "docker_image_ingestion": "samsara/ingestion-api"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `region`}}",
        "instance_type": "t2.micro",
        "security_group_id": "{{user `security_group_id`}}",
        "ssh_username": "ubuntu",
        "source_ami": "{{user `source_ami`}}",
        "ami_name": "{{user `build_id`}}-ingestion-api",
        "tags": {
            "project": "samsara",
            "build": "{{user `build_id`}}"
        }
    }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }} {{user `docker_image_ingestion`}}",
        "scripts": [
            "scripts/ingestion-api.sh"
        ]
    }]
}
